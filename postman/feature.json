							"        let event = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
							"        event = await api.publishEvent(event.id);\r",
							"        comment = { commentText: rnd.getWord(30)};\r",
							"        pm.collectionVariables.set('eventId', event.id);\r",
							"        pm.collectionVariables.set('commentatorId', user.id);\r",
							"        pm.collectionVariables.set('response', comment);\r",
							"    } catch(err) {\r",
							"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
							"    }\r",
							"\r",
							"    pm.request.body.update({\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify(comment),\r",
							"        options: { raw: { language: 'json' } }\r",
							"    });\r",
							"};\r",
							"\r",
							"const interval = setInterval(() => {}, 1000);\r",
							"\r",
							"setTimeout(async () => \r",
							"    {\r",
							"        try {\r",
							"            await main();\r",
							"        } catch (e) {\r",
							"            console.error(e);\r",
							"        } finally {\r",
							"            clearInterval(interval);\r",
							"        }\r",
							"    },  \r",
							"    100 \r",
							");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"const source = pm.collectionVariables.get('response');\r",
							"const target = pm.response.json();\r",
							"\r",
							"pm.test(\"Событие должно содержать поля: id, eventId, commentatorId, commentText, createdDate\", function () {\r",
							"pm.expect(target).to.have.property('id');\r",
							"pm.expect(target).to.have.property('eventId');\r",
							"pm.expect(target).to.have.property('commentatorId');\r",
							"pm.expect(target).to.have.property('commentText');\r",
							"pm.expect(target).to.have.property('createdDate');\r",
							"});\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе\", function () {\r",
							"    pm.expect(source.commentText).equal(target.commentText, 'Текст комментария события должен соответствовать тексту комментария события в запросе');\r",
							"    pm.expect(pm.collectionVariables.get('eventId')).equal(target.eventId, 'Id события должна соответствовать Id события в запросе');\r",
							"    pm.expect(pm.collectionVariables.get('commentatorId')).equal(target.commentatorId, 'Id комментатора должна соответствовать Id комментатора в запросе');    \r",
							"});"
						],
						"type": "text/javascript"
					}
				}
